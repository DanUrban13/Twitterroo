<section class="ui raised segment">
  <div class="ui right aligned grid">
    <div class="right floated left aligned three wide column">
      <div class="left aligned nine wide column">
        <h3 class="ui dividing header">New User</h3>
      </div>
    </div>
    <div class="right floated left aligned three wide column">
      <form id = "deleteSubset" action="/tweets/delete" method="post">
        <button class="ui button" type="submit" id="removeSelected">create user</button>
      </form>
    </div>
  </div>
  <section class="ui raised segment">
    <div class="ui grid">
      <div class="ui ten wide column">
        <div class="ui stacked fluid form segment">
          <form action="/register" method="POST">
            <h3 class="ui header">Register</h3>
            <div class="two fields">
              <div class="field">
                <label>First Name</label>
                <input placeholder="First Name" type="text" name="firstName">
              </div>
              <div class="field">
                <label>Last Name</label>
                <input placeholder="Last Name" type="text" name="lastName">
              </div>
            </div>
            <div class="field">
              <label>Email</label>
              <input placeholder="Email" type="text" name="email">
            </div>
            <div class="field">
              <label>Password</label>
              <input type="password" name="password">
            </div>
          </form>
          {{> formerror }}
        </div>
      </div>
    </div>
  </section>

  <div class="ui right aligned grid">
    <div class="right floated left aligned three wide column">
      <form action="/tweets/deleteAll" method="post">
        <button class="ui button" type="submit" id="removeAll">remove all</button>
      </form>
    </div>
    <div class="right floated left aligned three wide column">
      <form id = "deleteSubset" action="/tweets/delete" method="post">
        <button class="ui button" type="submit" id="removeSelected">remove selected</button>
      </form>
    </div>
  </div>

  <div class="ui horizontal segments">

    <div class="ui segment">
      <div class="ui very relaxed list">
      {{#each user}}
        <div class="item">
          <img class="ui avatar image" src="{{ image }}">
          <div class="content">
            <a class="header">{{ firstName }} {{ lastName }}</a>
            <div class="description">{{ following.length }} Following</div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>