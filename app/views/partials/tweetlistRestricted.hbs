<div class="ui container">
  <div class="ui padded stacked stackable grid segment">
    <div class="nine wide column" style="overflow: auto;  height: 600px; max-width: 650px; width: 100%;">
      <div class="ui threaded comments" >
        <h3 class="ui dividing header">Timeline</h3>
        <div id="userHistory">
          {{#each tweets}}
            <div class="comment" >
              <a class="avatar" href="#">
                <img src="{{ creator.image }}">
              </a>
              <div class="content">
                <a class="author"> {{creator.firstName}} {{creator.lastName}} </a>
                <div class="metadata">
                  <span class="date">{{dateString}} </span>
                </div>
                <div class="text">
                  {{text}}
                </div>
                <div class="actions">
                  <div class="ui container">
                    <div class="ui grid">
                      <div class="left aligned eight wide column">
                        <button class="ui button blue mini" type="button" id="{{ image }}" value="{{ _id }}">attached picture</button>
                      </div>
                      <div class="right floated left aligned eight wide column">
                      </div>
                    </div>
                  </div>
                </div>

                <div id="{{ _id }}-modal" class="ui modal">
                  <i class="close icon"></i>
                  <div class="header">
                    Picture
                  </div>
                  <div class="image content">
                    <div class="ui medium image">
                      <img src="{{ image }}">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $(':button').click(function(){
      var id = $(this).attr("value");
      var modal = '#' + id + '-modal';
      $(modal).modal('show');
    });
    $("button[id=''], button:not([id])").hide();
  });
</script>