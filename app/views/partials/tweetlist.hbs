<div class="ui container">
  <div class="ui two column padded stacked stackable grid segment">
    <div class="nine wide column" style="overflow: auto;  height: 600px; max-width: 650px; width: 100%;">
      <div class="ui threaded comments" >
        <h3 class="ui dividing header">Your recent History</h3>
        <div id="userHistory">
          <div class="ui grid">
            <form action="/tweets/deleteAll" method="post">
              <button class="ui button" type="submit">remove all</button>
            </form>
            <form action="/tweets/deleteAll" method="post">
              <button class="ui button" type="submit">remove all</button>
            </form>
          </div>


          <form id = "deleteSubset" action="/tweets/delete" method="post">
              <button class="ui button" type="submit">remove selected</button>
          {{#each tweets}}
            <div class="comment" >
              <a class="avatar">
                <img src="{{ creator.image }}">
              </a>
              <div class="content">
                <a class="author"> {{creator.firstName}} {{creator.lastName}} </a>
                <div class="metadata">
                  <span class="date">{{dateString}} </span>
                </div>
                <div class="text">
                  {{text}}
                </div>



                <!--<div class="actions">-->
                  <!--<form id = "deleteForm{{ _id }}" onsubmit="deleteTweet('{{ _id }}')" method="post">-->
                    <!--<input type="hidden" name="id{{ _id }}" value="{{ _id }}">-->
                    <!--<button type="submit">delete</button>-->
                  <!--</form>-->
                <!--</div>-->
                <div class="ui checkbox">
                  <input class="right floated" type="checkbox" name="tweet" value="{{ _id }}">
                  <label></label>
                </div>
              </div>
            </div>
          {{/each}}
          </form>
        </div>
      </div>
    </div>
    <div class="right floated left aligned six wide column" style="height:300px;">
      <h3 class="ui dividing header">Top contributors</h3>
    </div>
  </div>
</div>

